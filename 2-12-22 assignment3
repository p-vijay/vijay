way-1

def leap(n):
    if n%4==0:
        print('Yes')
    else:
        print('No')
n=int(input())
leap(n)


way-2

def leap(n):
    if n%4==0:
        return 'Yes'
    else:
        return 'No'
n=int(input())
print(leap(n))

way-3

def leap(n):
    if n%4==0:
        return True
    else:
        return False
n=int(input())
if(leap(n)):
    print('Yes')
else:
    print('No')
    

